{##}
{#                   currentPane.refresh();#}
{#                  #}
{#                }#}




                project_related_data_tab_container.watch("selectedChildWidget", function (name, oval, nval) {
                    console.log("selected child changed from ", nval.title, " to ", nval.href);
                    oval.set('href', '');
                    oval.refresh();

                    nval.set('href', nval.default_href);
                    nval.refresh();

                    //currentPane = nval;
                });


            });


</script>

