            {#        <td class='input_column'>#}
            {#          <input id='sequence_type'>#}
            {#        </td>#}
            {#      </tr>#}

            {# PROJECT #}
            <tr>
                <td class='label_column'>
                    <label for='sequence_project'>Project</label>
                </td>
