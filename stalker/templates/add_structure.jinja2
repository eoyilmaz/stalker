        // ********************************************************************
        // ADD BUTTON
        var add_button = new Button({
          label: "Add",
          type: "button",
          onClick: function(){
            if (add_structure_form.validate()){
              add_structure_form.submit();
            } else {
              return false;
            }
          }
        }, 'structure_add_button');
        add_button.startup();
        
        // ********************************************************************
        // CANCEL BUTTON
        var cancel_button = new Button({
          label: "Cancel",
          type: "button",
          onClick: function(){
            var dialog = dijit.byId('add_structure_dialog');
            dialog.destroyRecursive();
          }
        }, 'structure_cancel_button');
        cancel_button.startup();
    });
  </script>
