<script type='text/javascript'>
  require(['dijit/registry',
    'dojo/data/ObjectStore', 'dojox/grid/DataGrid', 'dojo/store/Memory',
    'dijit/form/FilteringSelect', 'dojo/store/JsonRest',
    'stalker/fieldUpdater', 'stalker/dialogCaller', 'stalker/gotoLink','dojo/on', 'dojo/query',
    'dojo/ready'],
          function(registry, ObjectStore, DataGrid, Memory, FilteringSelect,
                   JsonRest, fieldUpdater, dialogCaller, gotoLink, on, query, ready){

            ready(function(){

              var departments_DataGrid = new DataGrid({
                id: 'departments_data_grid',
                width: '100%',
                autoHeight: true,
                singleClickEdit: true,
                escapeHTMLInData: false,
                rowSelector: '20px'
              }, 'departments_data_grid');

{#              var append_department_button = dialogCaller({#}
{#                label: 'Append User',#}
{#                dialog_id: 'append_department_dialog',#}
{#                content_creator: append_department_dialog_creator,#}
{#                attach_to: 'view_departments_append_department_button',#}
{#                related_field_updater: departments_DataGrid_updater,#}
{#                data_id: '{{ entity.id }}'#}
{#              });#}

              departments_DataGrid.startup();
{#              append_department_button.startup();#}



              function departments_DataGrid_updater(){

                var department_memory = new JsonRest({
                  target: '/get/departments_byEntity/{{ entity.id }}'
                });

                department_memory.query().then(function(data){

                  var my_store =  new ObjectStore({ objectStore:new Memory({ data: data }) });

                  var structure = [
                    {name: 'Thumbnail',                      width: '100px'},
                    {name: 'Name',         field: 'name',    width: '100px'}
                  ];

                  departments_DataGrid.set('store', my_store );
                  departments_DataGrid.set('structure', structure );

                  gotoLink({target:'central_content'});

                });

              }



              departments_DataGrid_updater();
            });
          });
</script>

